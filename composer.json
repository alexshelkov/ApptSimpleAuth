    "description": "Integrate SimpleACL and Doctrine Mongo ODM authorization allowing authorization and authentication for ZF2 applications.",
    "keywords": ["ACL", "Zend Framework 2", "Doctrine Mongo ODM", "authentication", "authorization"],
    "homepage": "https://github.com/alexshelkov/ApptSimpleAuth",
    "authors": [
        {
            "name": "Alex Shelkovskiy",
            "email": "alexshelkov@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "alpha",
    "require": {
        "php": ">=5.3.0",
        "zendframework/zendframework": "2.*",
        "alexshelkov/simpleacl": "2.*",
        "doctrine/doctrine-mongo-odm-module": "0.7.*",
        "symfony/yaml": "2.*"
    },
    "autoload": {
        "psr-0": {
            "ApptSimpleAuth": "src/"
        }
    }
}